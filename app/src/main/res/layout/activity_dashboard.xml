<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draw_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background_all"
    android:layout_height="match_parent"

    tools:context=".Dashboard"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/button_color"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_baseline_menu_24"/>


      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:background="@drawable/dashboard_balance_back"
          android:layout_height="150dp">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_marginLeft="35dp"
              android:layout_height="wrap_content">


              <GridLayout
                  android:layout_width="match_parent"
                  android:columnCount="1"
                  android:rowCount="1"
                  android:layout_height="match_parent"
                  android:padding="5dp">

              <androidx.cardview.widget.CardView
                  app:cardBackgroundColor="@color/white"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="1"
                  app:cardCornerRadius="8dp">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center">

                      <ImageView
                          android:layout_width="80dp"
                          android:layout_height="80dp"
                          android:background="@drawable/profile" />

                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              </GridLayout>

          </LinearLayout>

          <LinearLayout
              android:orientation="vertical"
              android:layout_marginLeft="40dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_marginTop="15dp"
                  android:layout_width="wrap_content"
                  android:textSize="18sp"
                  android:layout_height="wrap_content"
                  android:id="@+id/d_user_name"
                  android:text="Mr. John"
                  android:textColor="@color/white"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:text="@string/refer_code"
                  android:textColor="@color/white"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/d_refer_code"
                  android:textSize="15sp"
                  android:text="720"
                  android:textColor="@color/white"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:text="@string/balance"
                  android:textColor="@color/white"/>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

                  <View
                      android:layout_gravity="center"
                      android:background="@drawable/coin"
                      android:layout_width="20dp"
                      android:layout_height="20dp"/>

                  <TextView
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="5dp"
                      android:layout_gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:text="9999"
                      android:textColor="@color/white"/>


              </LinearLayout>



          </LinearLayout>


      </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:layout_height="500dp"
                    android:padding="14dp">

                    <androidx.cardview.widget.CardView
                        android:onClick="task"
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/completed_task"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Task"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:onClick="profile"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                               
                                android:background="@drawable/profile_icon"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Profile"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:onClick="withdraw"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"

                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"

                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView

                                android:background="@drawable/cash_withdrawal"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Withdraw"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/leaderboard"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Top"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/guide"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Guide"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:onClick="notice"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"

                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/notification_bell"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Notice"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/history"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="History"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/contact"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Contact"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/tips"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Tips"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>