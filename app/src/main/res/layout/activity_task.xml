<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_all"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".task.Task">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/daily_task"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <GridLayout
             android:layout_width="match_parent"
             android:columnCount="1"
             android:rowCount="4"
             android:layout_height="350dp"
             android:padding="14dp">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="task1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="1. Task Incomplete"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 app:cardBackgroundColor="@color/white"
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:layout_marginTop="10dp"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:onClick="task2"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp">

                 <LinearLayout
                     android:layout_gravity="center"
                     android:layout_margin="10dp"
                     android:orientation="vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:textColor="@color/black"
                         android:textSize="18sp"
                         android:padding="10dp"
                         android:textStyle="bold"
                         android:text="2. Task Incomplete"/>

                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 app:cardBackgroundColor="@color/white"
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:layout_marginTop="10dp"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:onClick="task3"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp">

                 <LinearLayout
                     android:layout_gravity="center"
                     android:layout_margin="10dp"
                     android:orientation="vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:textColor="@color/black"
                         android:textSize="18sp"
                         android:padding="10dp"
                         android:textStyle="bold"
                         android:text="3. Task Incomplete"/>

                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 app:cardBackgroundColor="@color/white"
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:layout_marginTop="10dp"
                 app:cardElevation="8dp"
                 android:onClick="task4"
                 app:cardCornerRadius="8dp">

                 <LinearLayout
                     android:layout_gravity="center"
                     android:layout_margin="10dp"
                     android:orientation="vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:textColor="@color/black"
                         android:textSize="18sp"
                         android:padding="10dp"
                         android:textStyle="bold"
                         android:text="4. Task Incomplete"/>

                 </LinearLayout>

             </androidx.cardview.widget.CardView>

         </GridLayout>

    </LinearLayout>

</RelativeLayout>